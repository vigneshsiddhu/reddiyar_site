<p id="notice"><%= notice %></p>

<%= render 'home/headertop' %>
<%= render 'home/sidemenu' %>
  
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">     
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-home" aria-hidden="true"></i></a></li>
      <li><%= link_to 'Profile', profile_path(@profile) %></li>
      <li class="active">Edit</li>
    </ol>
  </div><!--/.row-->

<div class="col-lg-12">
  <div class="panel panel-default">
      <div class="panel-heading">
          Number of User
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
          <div class="table-responsive">
              <table class="table table-striped">
                  <thead>
                      <tr>
                          
                          <th>Total User</th>
                          <th>Verified</th>
                          <th>Un Verified</th>
                          
                      </tr>
                  </thead>
                  <tbody>
                      <tr>
                        <td><%= @total_profiles.count %></td>
                        <td><%= @verified_profile %></td>
                        <td><%= @unverified_profile %></td>
                          
                      </tr>
                  </tbody>
                 
              </table>
          </div>
          <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
  </div>
  <!-- /.panel -->
</div>

<div class="col-lg-12">
  <div class="panel panel-default">
      <div class="panel-heading">
          Listing User Roles
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
          <div class="table-responsive">
              <table class="table table-striped">
                  <thead>
                      <tr>
                          
                          <th>Name</th>
                          <th>Role</th>
                          <th></th>
                          <th></th>
                          <th></th>
                      </tr>
                  </thead>
                  <tbody>
                  <% @user_roles.each do |user_role| %>
                      <tr>
                      <% if user_role.user.profile.name.present? %>
                          <td> <%= user_role.user.profile.name %></td>
                          <td><%= user_role.role %></td>
                          <td><%= link_to 'Show', user_role, :class => "btn btn-info btn-fill_show"  %></td>
                          <td><%= link_to 'Edit', edit_user_role_path(user_role), :class => "btn btn-info btn-fill_show" %></td>
                          <td><%= link_to 'Destroy', user_role, method: :delete,:class => "btn btn-info btn-fill_show", data: { confirm: 'Are you sure?' } %></td>
                          
                      </tr>
                      <% end %>
                  </tbody>
                  <% end %>
              </table>
          </div>
          <!-- /.table-responsive -->
        <%= link_to 'ADD Role', new_user_role_path, :class => "btn btn-info btn-fill_show" %>
      </div>
      <!-- /.panel-body -->
  </div>
  <!-- /.panel -->
</div>