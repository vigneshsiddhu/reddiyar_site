<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
	<div class="form-group">
    <%= form_tag '/search', :method => "post" do %>
      <%= text_field_tag :name,nil, :class => "form-control",:placeholder => "Find People" %>
      <%#= submit_tag 'search' %>
    <%end %>
	</div>
	<ul class="nav" id="side-menu">
		<li>
      <%= link_to profile_path(current_user.profile) do %>
      <i class="fa fa-user" aria-hidden="true"></i> My Profile<span class="fa arrow"></span>
      <% end %>
    </li>
    <li>
      <%= link_to myfamily_path do %>
        <i class="fa fa-users" aria-hidden="true"></i> My Family<span class="fa arrow"></span>
      <% end %>
    </li>
    <% if (current_user.user_roles.pluck(:role) & [0,1,3]).any? %>
    <li>
      <%= link_to admin_unverified_profiles_path do %>
        <i class="fa fa-envelope" aria-hidden="true"></i> Verify Profiles<span class="fa arrow"></span>
      <% end %>
    </li>
    <% end %>
    <% if (current_user.user_roles.pluck(:role) & [0,1]).any? %>
    <li>
      <%= link_to new_user_role_path do %>
        <i class="fa fa-envelope" aria-hidden="true"></i> Provide Access<span class="fa arrow"></span>
      <% end %>
    </li>
    <li>
      <%= link_to user_roles_path do %>
        <i class="fa fa-envelope" aria-hidden="true"></i>View Detials<span class="fa arrow"></span>
      <% end %>
    </li>
    <% end %>
  </ul>
</div><!--/.sidebar-->