<!DOCTYPE html>
<html lang="en">
<head>
  <title>Trichy Reddiars Community</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/style.css"> 

  
  <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <script src="js/custom.js"></script>

</head>
<body>


 <%= render 'menu' %>

<!-- ///////////////////////////Slider Start /////////////////////////////// --> 
<% if notice.present? %>
<div class="alert fade in alert-success">
    <button class="close" data-dismiss="alert">Ã—</button>
    <%= notice %>
</div>
<% end %>
<div class="container-fluid" style="margin-top:-20px !important;">
<div class="row">
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li style="background-color:#2c93d5;" data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li style="background-color:#2c93d5;" data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li style="background-color:#2c93d5;" data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li style="background-color:#2c93d5;" data-target="#carousel-example-generic" data-slide-to="3"></li>
    <li style="background-color:#2c93d5;" data-target="#carousel-example-generic" data-slide-to="4"></li>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
    <%= image_tag("slider-001.jpg", :alt => "rss feed") %>
    </div>
    <div class="item">
     <%= image_tag("slider-002.jpg", :alt => "rss feed") %>
    </div>
    <div class="item">
      <%= image_tag("slider-003.jpg", :alt => "rss feed") %>
    </div>
    <div class="item">
     <%= image_tag("slider-004.jpg", :alt => "rss feed") %>
    </div>
    <div class="item">
    <%= image_tag("slider-005.jpg", :alt => "rss feed") %>
    </div>
  </div>
 
  <!-- Controls -->
 <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div> <!-- Carousel -->


</div>
</div>

<!-- ///////////////////////////Slider End /////////////////////////////// --> 

<!-- /////////////////////  Footer Start ////////////////////////////// -->
<div class="container-fluid" id="footer" >
<div class="row"> 
    <div class="col-sm-12 text-center"> 

    <% if current_user.present? %>
  <a href="#">About Us </a> <span class="footer-pipe"> | </span> <a href="#"> Members List </a> <span class="footer-pipe"> | </span>
  <%= link_to  profile_path(@profile) do %>
  <span class="glyphicon glyphicon-user"></span> Profile
  <% end %>
  <span class="footer-pipe"> | </span>
  <%= link_to destroy_user_session_path, :method => :delete do %>
  <span class="glyphicon glyphicon-log-in"></span> logout 
  <% end %>
<% else %>
  <a href="#">About Us </a> <span class="footer-pipe"> | </span> <a href="#"> Members List </a> <span class="footer-pipe"> | </span>
  <%= link_to new_user_session_path do %>
  <span class="glyphicon glyphicon-log-in"></span> login  
  <% end %>
  <span class="footer-pipe"> | </span>
  <%= link_to  new_user_registration_path do %>
  <span class="glyphicon glyphicon-user"></span> Sign Up<% end %>
<% end %> </div>

</div>
</div>
<!-- /////////////////////  Footer End ////////////////////////////// -->


</body>
</html>
