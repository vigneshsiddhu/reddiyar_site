<%= render 'home/headertop' %>
<%= render 'home/sidemenu' %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">     
	<div class="row">
	<ol class="breadcrumb">
	  <li><a href="#"><i class="fa fa-home" aria-hidden="true"></i></a></li>
	  <li class="active">Family</li>
	</ol>
	</div><!--/.row-->

	<div class="row">
	<div class="col-lg-12">
	  <h1 class="page-header">My Family</h1>
	</div>
	</div><!--/.row-->

	<div class="row">
		<div class="col-md-12">
	        	<div class="panel-body">
	        		<div class="panel list-group">
                <div class="content">
                <% @family.each do |family| %>
                      <div class="col-md-4">
                        <div class="card">
                            
                            <div class="row">
                              <div class="col-xs-12"> 
                            <%= image_tag(family['image'], width: '100%') %>
                              <a class="btn  btn-xs btn-block "><i class="fa fa-check-circle append-icon"></i>Profile Image</a> </div>
                            </div>
                            <h3><%= family['name'] %></h3>
                            <h5><%= family['email'] %></h5>
                            <table class="table table-striped table-hover">
                              <tbody>
                                <tr>
                                  <td style="width:60%;">Birthday</td>
                                  <td><%= (family['dob']).strftime("%B %d") %></td>
                                </tr>
                                <tr>
                                  <td>Relationship</td>
                                  <td><%= family['relationship'] %></td>
                                </tr>
                                <tr>
                                  <td>Gender</td>
                                  <td><%= family['gender'] %></td>
                                </tr>
                              </tbody>
                            </table>
                            <%= link_to 'View Profile', profile_path(family['profile_id']), :class => "btn btn-info btn-fill_show" %>
                        </div>
                      </div>
                  <% end %>
                </div>
	        		</div>
						</div>
		</div>
	</div>
</div>