<%= render 'home/headertop' %>
<%= render 'home/sidemenu' %>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-home" aria-hidden="true"></i></a></li>
      <li class="active">Profile</li>
    </ol>
  </div><!--/.row-->

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">My Profile</h1>
    </div>
  </div><!--/.row-->

  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div id="menu1" class="admin_leftNav">
          <div class="panel-body">
            <div class="panel list-group">
              <div class="content">
                <div class="row">
                  <div class="col-md-6">
                      <div class="form-group">
                          <label>Name</label>

                          <input type="text" class="form-control" disabled value="<%= @profile.name %>">
                      </div>
                  </div>
                  <div class="col-md-6">
                      <div class="form-group">
                          <label>Email</label>
                          <input type="text" class="form-control" disabled value="<%=  @profile.user.email%>">
                      </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-5">
                      <div class="form-group">
                          <label>Date Of Birth</label>
                          <input type="text" class="form-control" disabled value="<%= @profile.dob.strftime("%m/%d/%Y") %>">
                      </div>
                  </div>

                  <div class="col-md-3">
                      <div class="form-group">
                          <label>Age</label>
                          <% if @profile.dob.present? %>
                          <input type="text" class="form-control"  disabled value="<%= Date.today.year - @profile.dob.year %>">
                          <% end %>
                      </div>
                  </div>
                  <div class="col-md-4">
                      <div class="form-group">
                          <label for="exampleInputEmail1">Mobile</label>
                          <input type="email" class="form-control"  disabled value = "<%= @profile.mobile %>">
                      </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                      <div class="form-group">
                          <label>Address</label>
                          <input type="text" class="form-control"  disabled  value="<%= @profile.locations.first.address %>">
                      </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-4">
                      <div class="form-group">
                          <label>City</label>
                          <input type="text" class="form-control"  disabled value="<%= @profile.locations.first.city %>">
                      </div>
                  </div>
                  <div class="col-md-4">
                      <div class="form-group">
                          <label>District</label>
                          <input type="text" class="form-control"  disabled value="<%= @profile.locations.first.district %>">
                      </div>
                  </div>
                  <div class="col-md-4">
                      <div class="form-group">
                          <label>Postal Code</label>
                          <input type="number" class="form-control"  disabled value="<%= @profile.locations.first.pin_code %>">
                      </div>
                  </div>
                  <div class="col-md-4">
                      <div class="form-group">
                          <label>Marital Status</label>
                          <input type="text" class="form-control"  disabled value="<%= @profile.marital_status %>">
                      </div>
                  </div>
                  <div class="col-md-4">
                      <div class="form-group">
                          <label>Blood Group</label>
                          <input type="text" class="form-control"  disabled value="<%= @profile.blood_group %>">
                      </div>
                  </div>
                  <div class="col-md-4">
                      <div class="form-group">
                          <label>Gender</label>
                          <input type="text" class="form-control" disabled value="<%= @profile.gender %>">
                      </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-4">
                      <div class="form-group">
                          <label>Education</label>
                          <input type="text" class="form-control"  disabled value="<%= @profile.educations.first.type_of_education %>">
                      </div>
                  </div>
                </div>
                <% if current_user.profile.id == @profile.id %>
                  <%= link_to 'Edit Profile', edit_profile_path(@profile), :class => "btn btn-info btn-fill_show pull-right" %>
                <!-- <button type="submit" class="btn btn-info btn-fill_show pull-right">Edit Profile</button> -->
                <% end %>
                <div class="clearfix"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card card-user">
        <div class="image">
        </div>
        <div class="content">
          <div class="author">
            <%= image_tag(@profile.image, :alt => "Profile Picture", :class => "avatar") %>
            <h3 class="title"><%= @profile.name %><br />
              <p><%= @profile.user.email %></p>
            </h3>
        </div>
        <!-- <p class="description text-center"> "Lamborghini Mercy <br>
          Your chick she so thirsty <br>
          I'm in that two seat Lambo"
        </p> -->
      </div>
      <hr>
      <div class="text-center">
        <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
        <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
        <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>
      </div>
    </div>
  </div>
</div><!--/.row-->
</div>  <!--/.main-->
