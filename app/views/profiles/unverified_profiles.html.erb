<%= render 'home/headertop' %>
<%= render 'home/sidemenu' %>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">     
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-home" aria-hidden="true"></i></a></li>
      <li>Admin</li>
      <li class="active">Unverified Profiles</li>
    </ol>
  </div><!--/.row-->
  
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">My Profile</h1>
    </div>
  </div><!--/.row-->
  
  <div class="row">
    <% @profiles.each do |profile| %>
      <div class="col-md-11">
        <div class = "card">
          <div class="row">
            <div class="col-md-3">
            <div class="author">
              <%= image_tag(profile.image, :class => "avatar") %>
            </div>
            </div>
            <div class="col-md-7">
              <div class="row mgbt-xs-0">
                <label class="col-xs-3 control-label">Name:</label>
                <div class="col-xs-7 controls"><%= profile.name %></div>
                <!-- col-sm-10 --> 
              </div>


              <div class="row mgbt-xs-0">
                <label class="col-xs-3 control-label">Email:</label>
                <div class="col-xs-7 controls"><%= profile.user.email %></div>
                <!-- col-sm-10 --> 
              </div>

              <div class="row mgbt-xs-0">
                <label class="col-xs-3 control-label">Gender:</label>
                <div class="col-xs-7 controls"><%= profile.gender %></div>
                <!-- col-sm-10 --> 
              </div>

              <div class="row mgbt-xs-0">
                <label class="col-xs-3 control-label">Address:</label>
                <div class="col-xs-8 controls"><%#= profile.address.first %></div>
                <!-- col-sm-10 --> 
              </div>
            </div>
            <div class="col-md-2">
              <%= link_to 'View Profile', profile_path(profile), :class => "btn btn-info btn-fill_show" %>
              <%= link_to 'Verify Profile', "/admin/verify_profile/#{profile.id}", :class => "btn btn-info btn-fill_show" %>
              <!-- <button type="submit" class="btn btn-info btn-fill_show pull-right" style="margin: 5% 0;">Verify Profile</button>
              <button type="submit" class="btn btn-info btn-fill_show pull-right" style="margin: 5% 0;">Check Profile</button> -->
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div><!--/.row-->
</div>  <!--/.main-->
